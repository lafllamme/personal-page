{
  "name": "@lafllamme/personal-page-shared",
  "version": "1.1.2",
  "description": "Shared types, utilities, and Payload CMS collections for the personal-page monorepo. Includes types, access utils, and Payload collection configs for Posts, Pages, Media, Users, and Categories.",
  "private": true,
  "type": "module",
  "main": "./payload/config.cms.ts",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./payload/config.cms.ts"
    },
    "./frontend": {
      "import": "./payload/config.frontend.ts"
    },
    "./cms": {
      "import": "./payload/config.cms.ts"
    },
    "./types": {
      "import": "./dist/types/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./utils": {
      "import": "./dist/utils/index.js",
      "types": "./dist/utils/index.d.ts"
    },
    "./utils/access": {
      "import": "./dist/utils/access.js",
      "types": "./dist/utils/access.d.ts"
    },
    "./payload": {
      "import": "./dist/payload/config.js",
      "types": "./dist/payload/config.d.ts"
    },
    "./payload/collections/Users": {
      "import": "./dist/payload/collections/Users.js",
      "types": "./dist/payload/collections/Users.d.ts"
    },
    "./payload/collections/Media": {
      "import": "./dist/payload/collections/Media.js",
      "types": "./dist/payload/collections/Media.d.ts"
    },
    "./payload/collections/Pages": {
      "import": "./dist/payload/collections/Pages.js",
      "types": "./dist/payload/collections/Pages.d.ts"
    },
    "./payload/collections/Posts": {
      "import": "./dist/payload/collections/Posts.js",
      "types": "./dist/payload/collections/Posts.d.ts"
    },
    "./payload/collections/Categories": {
      "import": "./dist/payload/collections/Categories.js",
      "types": "./dist/payload/collections/Categories.d.ts"
    }
  },
  "scripts": {
    "build": "tsc --build",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@payloadcms/db-postgres": "3.60.0",
    "@payloadcms/next": "3.60.0",
    "@payloadcms/richtext-lexical": "3.60.0",
    "@vercel/blob": "^2.0.0",
    "monaco-editor": "^0.54.0",
    "payload": "3.60.0",
    "sharp": "0.34.3"
  },
  "devDependencies": {
    "@types/node": "^24.8.1",
    "@types/react": "^19.2.2",
    "typescript": "^5.9.3"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lafllamme/personal-page.git",
    "directory": "shared"
  },
  "keywords": [
    "payload",
    "cms",
    "types",
    "shared",
    "monorepo",
    "utils",
    "collections",
    "media",
    "posts",
    "pages",
    "users",
    "categories",
    "access",
    "personal-page"
  ],
  "author": "Dogan Teke <dogan.teke@gmail.com>",
  "license": "MIT"
}
