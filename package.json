{
  "name": "personal-page-monorepo",
  "version": "1.0.0",
  "description": "Personal page with Nuxt frontend and Payload CMS backend",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "dev:frontend": "turbo dev --filter=@personal-page/frontend",
    "dev:cms": "turbo dev --filter=@personal-page/cms",
    "build": "turbo build",
    "build:frontend": "turbo build --filter=@personal-page/frontend",
    "build:cms": "turbo build --filter=@personal-page/cms",
    "start": "turbo start",
    "clean": "turbo clean",
    "type-check": "turbo type-check",
    "lint": "turbo lint",
    "payload:generate-types": "turbo generate:types --filter=@personal-page/cms && cp cms/src/payload-types.ts shared/types/payload-types.ts",
    "deps:safe": "pnpm dlx taze -r --write",
    "deps:minor": "pnpm dlx taze -r --write minor",
    "deps:patch": "pnpm dlx taze -r --write patch",
    "deps:major": "pnpm dlx taze -r --write major",
    "deps:latest": "pnpm dlx taze -r --write latest",
    "deps:peer": "pnpm dlx taze -r --write --peer",
    "deps:install": "pnpm install",
    "deps:upgrade:safe": "pnpm run deps:safe && pnpm run deps:install",
    "deps:upgrade:major": "pnpm run deps:major && pnpm run deps:install",
    "deps:upgrade:latest": "pnpm run deps:latest && pnpm run deps:install && pnpm -w dedupe"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "turbo": "^2.5.8"
  },
  "packageManager": "pnpm@10.18.3",
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp",
      "esbuild"
    ],
    "peerDependencyRules": {
      "ignoreMissing": [
        "@types/react",
        "react",
        "react-dom"
      ],
      "allowedVersions": {
        "react": "19",
        "react-dom": "19",
        "vite": "7",
        "@unocss/webpack": "0.65.4 || 66.3.3"
      },
      "ignorePatterns": [
        "@theme-toggles/react"
      ]
    }
  }
}
