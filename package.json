{
  "name": "@tec/main",
  "version": "1.0.1-beta.1",
  "description": "Personal page with Nuxt frontend and Payload CMS backend",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "dev:frontend": "turbo dev --filter=@tec/frontend",
    "dev:cms": "turbo dev --filter=@tec/cms",
    "build": "turbo build",
    "eslint": "eslint .",
    "build:frontend": "turbo build --filter=@tec/frontend",
    "build:cms": "turbo build --filter=@tec/cms",
    "start": "turbo start",
    "clean": "turbo clean",
    "type-check": "turbo type-check",
    "lint": "turbo lint",
    "payload:generate-types": "turbo generate:types --filter=@tec/cms && cp cms/src/payload-types.ts shared/types/payload-types.ts",
    "deps:safe": "pnpm taze -r --write",
    "deps:minor": "pnpm taze -r --write minor",
    "deps:patch": "pnpm taze -r --write patch",
    "deps:major": "pnpm taze -r --write major",
    "deps:latest": "pnpm taze -r --write latest",
    "deps:peer": "pnpm taze -r --write --peer",
    "deps:install": "pnpm install",
    "deps:upgrade:safe": "pnpm run deps:safe && pnpm run deps:install",
    "deps:upgrade:major": "pnpm run deps:major && pnpm run deps:install",
    "deps:upgrade:latest": "pnpm run deps:latest && pnpm run deps:install && pnpm -w dedupe"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:dev",
    "@eslint/eslintrc": "catalog:dev",
    "@next/eslint-plugin-next": "catalog:dev",
    "@rspack/core": "catalog:build",
    "@typescript-eslint/parser": "catalog:dev",
    "concurrently": "catalog:dev",
    "eslint": "catalog:dev",
    "eslint-config-next": "catalog:dev",
    "eslint-plugin-yml": "catalog:dev",
    "taze": "catalog:dev",
    "turbo": "catalog:dev",
    "vue-eslint-parser": "catalog:dev",
    "yaml-eslint-parser": "catalog:dev"
  },
  "packageManager": "pnpm@10.28.2",
  "pnpm": {
    "onlyBuiltDependencies": [
      "bufferutil",
      "esbuild",
      "sharp",
      "@parcel/watcher",
      "unrs-resolver",
      "utf-8-validate",
      "vue-demi",
      "workerd"
    ],
    "overrides": {
      "postprocessing": "6.38.2",
      "rolldown": "1.0.0-beta.53",
      "vite": "npm:rolldown-vite@7.3.1"
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "focus-trap": "^8.0.0",
        "react": "^19.2.3",
        "react-dom": "^19.2.3",
        "three": "^0.182.0",
        "vue-router": "^5.0.1"
      }
    }
  }
}
