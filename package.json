{
  "name": "@tec/main",
  "version": "1.0.1-beta.1",
  "description": "Personal page with Nuxt frontend and Payload CMS backend",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "dev:frontend": "turbo dev --filter=@tec/frontend",
    "dev:cms": "turbo dev --filter=@tec/cms",
    "build": "turbo build",
    "eslint": "eslint .",
    "build:frontend": "turbo build --filter=@tec/frontend",
    "build:cms": "turbo build --filter=@tec/cms",
    "start": "turbo start",
    "clean": "turbo clean",
    "type-check": "turbo type-check",
    "lint": "turbo lint",
    "payload:generate-types": "turbo generate:types --filter=@tec/cms && cp cms/src/payload-types.ts shared/types/payload-types.ts",
    "deps:safe": "pnpm dlx taze -r --write",
    "deps:minor": "pnpm dlx taze -r --write minor",
    "deps:patch": "pnpm dlx taze -r --write patch",
    "deps:major": "pnpm dlx taze -r --write major",
    "deps:latest": "pnpm dlx taze -r --write latest",
    "deps:peer": "pnpm dlx taze -r --write --peer",
    "deps:install": "pnpm install",
    "deps:upgrade:safe": "pnpm run deps:safe && pnpm run deps:install",
    "deps:upgrade:major": "pnpm run deps:major && pnpm run deps:install",
    "deps:upgrade:latest": "pnpm run deps:latest && pnpm run deps:install && pnpm -w dedupe"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@eslint/eslintrc": "catalog:",
    "@next/eslint-plugin-next": "catalog:",
    "@typescript-eslint/parser": "catalog:",
    "concurrently": "catalog:",
    "eslint": "catalog:",
    "eslint-config-next": "catalog:",
    "eslint-plugin-yml": "catalog:",
    "vue-eslint-parser": "catalog:",
    "yaml-eslint-parser": "catalog:",
    "turbo": "catalog:"
  },
  "packageManager": "pnpm@10.18.3",
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp",
      "esbuild"
    ],
    "overrides": {
      "@dnd-kit/core": "^6.3.0"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "@types/react",
        "react",
        "react-dom"
      ],
      "allowedVersions": {
        "react": "19",
        "react-dom": "19",
        "vite": "7",
        "@unocss/webpack": "0.65.4 || 66.3.3"
      },
      "ignorePatterns": [
        "@theme-toggles/react"
      ]
    }
  }
}
