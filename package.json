{
  "name": "personal-page-monorepo",
  "version": "1.0.0",
  "description": "Personal page with Nuxt frontend and Payload CMS backend",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "dev:frontend": "turbo dev --filter=@personal-page/frontend",
    "dev:cms": "turbo dev --filter=@personal-page/cms",
    "build": "turbo build",
    "build:frontend": "turbo build --filter=@personal-page/frontend",
    "build:cms": "turbo build --filter=@personal-page/cms",
    "start": "turbo start",
    "clean": "turbo clean",
    "type-check": "turbo type-check",
    "lint": "turbo lint",
    "payload:generate-types": "turbo generate:types --filter=@personal-page/cms && cp cms/src/payload-types.ts shared/types/payload-types.ts"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "turbo": "^2.5.4"
  },
  "packageManager": "pnpm@10.12.1+sha512.f0dda8580f0ee9481c5c79a1d927b9164f2c478e90992ad268bbb2465a736984391d6333d2c327913578b2804af33474ca554ba29c04a8b13060a717675ae3ac",
  "dependencies": {
    "@payloadcms/db-postgres": "3.46.0",
    "@payloadcms/richtext-lexical": "3.46.0",
    "payload": "3.46.0"
  }
}