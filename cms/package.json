{
  "name": "@tec/cms",
  "version": "1.0.1-beta.1",
  "description": "A blank template to get started with Payload 3.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "prebuild": "pnpm run generate:importmap",
    "build": "next build",
    "predev": "pnpm run generate:importmap",
    "dev": "PORT=3001 next dev -p 3001",
    "generate:importmap": "payload generate:importmap",
    "generate:types": "payload generate:types",
    "lint": "next lint",
    "payload": "payload",
    "start": "PORT=3001 next start -p 3001",
    "start:prod": "next start",
    "test": "pnpm run test:int && pnpm run test:e2e",
    "test:e2e": "pnpm exec playwright test",
    "test:int": "vitest run --config ./vitest.config.mts"
  },
  "dependencies": {
    "@tec/types": "workspace:*",
    "@payloadcms/db-postgres": "catalog:",
    "@payloadcms/next": "catalog:",
    "@payloadcms/payload-cloud": "catalog:",
    "@payloadcms/richtext-lexical": "catalog:",
    "@payloadcms/storage-vercel-blob": "catalog:",
    "@payloadcms/ui": "catalog:",
    "@vercel/blob": "catalog:",
    "cross-env": "catalog:",
    "dotenv": "catalog:",
    "graphql": "catalog:",
    "monaco-editor": "catalog:",
    "next": "catalog:",
    "payload": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "sharp": "catalog:"
  },
  "devDependencies": {
    "@playwright/test": "catalog:",
    "@testing-library/react": "catalog:",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@vitejs/plugin-react": "catalog:",
    "eslint": "catalog:",
    "eslint-config-next": "catalog:",
    "jsdom": "catalog:",
    "playwright": "catalog:",
    "playwright-core": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:",
    "vite-tsconfig-paths": "catalog:",
    "vitest": "catalog:"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0",
    "pnpm": "^9 || ^10"
  }
}
