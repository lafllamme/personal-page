{
  "name": "@personal-page/cms",
  "version": "1.0.0",
  "description": "A blank template to get started with Payload 3.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "prebuild": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "build": "cross-env NODE_OPTIONS=\"--no-deprecation --max-old-space-size=4096\" next build",
    "predev": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "dev": "cross-env NODE_OPTIONS=--no-deprecation PORT=3001 next dev -p 3001",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation PORT=3001 next dev -p 3001",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation next lint",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "start": "cross-env NODE_OPTIONS=--no-deprecation PORT=3001 next start -p 3001",
    "test": "pnpm run test:int && pnpm run test:e2e",
    "test:e2e": "cross-env NODE_OPTIONS=\"--no-deprecation --no-experimental-strip-types\" pnpm exec playwright test",
    "test:int": "cross-env NODE_OPTIONS=--no-deprecation vitest run --config ./vitest.config.mts"
  },
  "dependencies": {
    "@lafllamme/personal-page-shared": "workspace:*",
    "@payloadcms/db-postgres": "3.60.0",
    "@payloadcms/next": "3.60.0",
    "@payloadcms/payload-cloud": "3.60.0",
    "@payloadcms/richtext-lexical": "3.60.0",
    "@payloadcms/storage-vercel-blob": "^3.60.0",
    "@payloadcms/ui": "3.60.0",
    "@vercel/blob": "^2.0.0",
    "cross-env": "^10.1.0",
    "dotenv": "16.4.7",
    "graphql": "^16.11.0",
    "monaco-editor": "^0.54.0",
    "next": "15.3.2",
    "payload": "3.60.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "sharp": "0.34.3"
  },
  "devDependencies": {
    "@playwright/test": "1.50.0",
    "@testing-library/react": "16.3.0",
    "@types/node": "^24.8.1",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.2",
    "@vitejs/plugin-react": "4.5.2",
    "eslint": "^9.38.0",
    "eslint-config-next": "15.3.0",
    "jsdom": "26.1.0",
    "playwright": "1.50.0",
    "playwright-core": "1.50.0",
    "prettier": "^3.6.2",
    "typescript": "5.7.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.3"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0",
    "pnpm": "^9 || ^10"
  }
}
