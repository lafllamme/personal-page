{
  "name": "@tec/cms",
  "version": "1.0.1-beta.1",
  "description": "A blank template to get started with Payload 3.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "pnpm --filter @tec/types build && pnpm run generate:importmap && next build",
    "dev": "pnpm --filter @tec/types build && pnpm run generate:importmap && PORT=3001 next dev -p 3001",
    "generate:importmap": "payload generate:importmap",
    "generate:types": "payload generate:types",
    "lint": "next lint",
    "payload": "payload",
    "start": "PORT=3001 next start -p 3001",
    "start:prod": "next start",
    "test": "pnpm run test:int && pnpm run test:e2e",
    "test:e2e": "pnpm exec playwright test",
    "test:int": "vitest run --config ./vitest.config.mts"
  },
  "dependencies": {
    "@dnd-kit/core": "catalog:cms",
    "@payloadcms/db-postgres": "catalog:cms",
    "@payloadcms/next": "catalog:cms",
    "@payloadcms/payload-cloud": "catalog:cms",
    "@payloadcms/richtext-lexical": "catalog:cms",
    "@payloadcms/storage-vercel-blob": "catalog:cms",
    "@payloadcms/ui": "catalog:cms",
    "@tec/types": "workspace:*",
    "@vercel/blob": "catalog:cms",
    "cross-env": "catalog:cms",
    "dotenv": "catalog:cms",
    "graphql": "catalog:cms",
    "monaco-editor": "catalog:common",
    "next": "catalog:cms",
    "payload": "catalog:cms",
    "react": "catalog:cms",
    "react-dom": "catalog:cms",
    "sharp": "catalog:common"
  },
  "devDependencies": {
    "@playwright/test": "catalog:dev",
    "@testing-library/react": "catalog:dev",
    "@types/node": "catalog:types",
    "@types/react": "catalog:types",
    "@types/react-dom": "catalog:types",
    "@vitejs/plugin-react": "catalog:build",
    "eslint": "catalog:dev",
    "eslint-config-next": "catalog:dev",
    "eslint-plugin-jsx-a11y": "catalog:dev",
    "eslint-plugin-react": "catalog:dev",
    "eslint-plugin-react-hooks": "catalog:dev",
    "jsdom": "catalog:dev",
    "playwright": "catalog:dev",
    "playwright-core": "catalog:dev",
    "prettier": "catalog:dev",
    "typescript": "catalog:dev",
    "vite-tsconfig-paths": "catalog:build",
    "vitest": "catalog:dev"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0",
    "pnpm": "^9 || ^10"
  }
}
