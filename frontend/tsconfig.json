// tsconfig.json
{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    // Important for path aliases
    "paths": {
      "~/*": [
        "./app/*"
      ],
      "~~/*": [
        "./*"
      ],
      "@/*": [
        "./app/*"
      ],
      "@shared-types": [
        "app/types/index.ts"
      ],
      "@shared-types/*": [
        "app/types/*"
      ]
    },
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    ".output",
    "dist"
  ]
}
